@model List<Broadway.Web.Models.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Teacher Name
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Date of Join
        </th>
        <th>
