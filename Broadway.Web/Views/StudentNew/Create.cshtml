@model  Broadway.Web.Models.Student

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "StudentNew", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="row">
    <div class="col-lg-3">Name</div>
    <div class="col-lg-9">
    @Html.TextBoxFor(p=>p.Name, new { placeholder="Name" })

    </div>
</div>
<div class="row">
    <div class="col-lg-3">Address</div>
    <div class="col-lg-9">
    @Html.TextBoxFor(p=>p.Address, new { placeholder="Address" })

    </div>
</div>
<div class="row">
    <div class="col-lg-3">Email</div>
    <div class="col-lg-9">
    @Html.TextBoxFor(p=>p.Email,new { placeholder="Email"})

    </div>
</div>
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-9">
        <input type="submit" value="create" />

    </div>
</div>
  
}